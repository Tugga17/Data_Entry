# --- Centered Scrollable Transfer Section ---
canvas_wrapper = tk.Frame(self.root)
canvas_wrapper.pack()

canvas_frame = tk.Frame(canvas_wrapper)
canvas_frame.pack()

canvas = tk.Canvas(canvas_frame, width=800, height=200)
canvas.grid(row=0, column=0, sticky="nsew")

scrollbar = ttk.Scrollbar(canvas_frame, orient="vertical", command=canvas.yview)
scrollbar.grid(row=0, column=1, sticky="ns")

canvas.configure(yscrollcommand=scrollbar.set)

transfer_frame = tk.Frame(canvas)
canvas.create_window((0, 0), window=transfer_frame, anchor="nw")

def on_frame_configure(event):
    canvas.configure(scrollregion=canvas.bbox("all"))

transfer_frame.bind("<Configure>", on_frame_configure)
self.scrollable_frame.bind("<Enter>", lambda e: self.canvas.bind_all("<MouseWheel>", self._on_mousewheel))
self.scrollable_frame.bind("<Leave>", lambda e: self.canvas.unbind_all("<MouseWheel>"))

def _on_mousewheel(self, event):
    self.canvas.yview_scroll(int(-1 * (event.delta / 120)), "units")