import pyautogui
import time

print("Keeping Teams active... Press Ctrl+C to stop.")

try:
    while True:
        pyautogui.move(1, 0, duration=0.1)  # move right
        pyautogui.move(-1, 0, duration=0.1) # move left
        time.sleep(300)  # wait 5 minutes
except KeyboardInterrupt:
    print("Stopped.")